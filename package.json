{
  "name": "@hamidyfine/use-breakpoint",
  "version": "1.0.2",
  "private": false,
  "description": "Lightweight React hook for breakpoint-based responsive logic supports SSR and CSS-in-JS.",
  "keywords": [
    "react",
    "react-hook",
    "breakpoint",
    "responsive",
    "nextjs"
  ],
  "homepage": "https://github.com/hamidyfine/use-breakpoint",
  "repository": {
    "type": "git",
    "url": "git@github.com:hamidyfine/use-breakpoint.git"
  },
  "bugs": {
    "url": "https://github.com/hamidyfine/use-breakpoint/issues"
  },
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsup",
    "clean": "rimraf dist",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0 --no-warn-ignored --fix",
    "typecheck": "tsc --noEmit",
    "release": "pnpm build && release-it",
    "prepare": "husky"
  },
  "peerDependencies": {
    "react": ">=17.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "eslint-config-reactify": "^1.1.6",
    "husky": "^9.1.7",
    "release-it": "^19.0.6",
    "rimraf": "^6.1.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint"
    ]
  }
}
